<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.apache.ibatis.submitted.mask_log.Mapper">

    <select id="getUser" resultType="org.apache.ibatis.submitted.mask_log.User">
        select * from users where id = #{id} and number = #{number,maskLog=true} and password = #{password,maskLog=true}
    </select>

    <select id="getUsers" resultType="org.apache.ibatis.submitted.mask_log.User">
        select * from users where number in
        <foreach collection="numbers" item="item" index="index" open="(" separator="," close=")" nullable="true">
            #{item,maskLog=true}
        </foreach>
        and password in
        <foreach collection="passwords" item="item" index="index" open="(" separator="," close=")" nullable="true">
            #{item,maskLog=true}
        </foreach>
    </select>

    <insert id="insertUser">
        insert into users values(#{id}, #{name}, #{number,maskLog=true}, #{password,maskLog=true})
    </insert>

    <insert id="insertUsers">
        insert into users values
        <foreach collection="users" item="user" index="index" separator="," nullable="true">
            (#{user.id}, #{user.name}, #{user.number,maskLog=true}, #{user.password,maskLog=true})
        </foreach>
    </insert>

</mapper>
