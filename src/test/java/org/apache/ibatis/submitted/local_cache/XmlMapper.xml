<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.apache.ibatis.submitted.local_cache.XmlMapper">

  <select id="randWithUseLocalCache" resultType="org.apache.ibatis.submitted.local_cache.Random">
    select RAND() as value from INFORMATION_SCHEMA.SYSTEM_USERS
  </select>

  <select id="randWithoutUseLocalCache" resultType="org.apache.ibatis.submitted.local_cache.Random" useLocalCache="false">
    select RAND() as value from INFORMATION_SCHEMA.SYSTEM_USERS
  </select>

  <resultMap id="orderResultMap" type="org.apache.ibatis.submitted.local_cache.Order">
    <id property="id" column="id"/>
    <result property="dateTime" column="date_time"/>
    <collection property="lines" select="selectOrderLines" column="{orderId=id}"/>
  </resultMap>
  <select id="selectOrder" resultMap="orderResultMap">
    select id, date_time from ORDERS where id = #{id}
  </select>
  <resultMap id="orderLineResultMap" type="org.apache.ibatis.submitted.local_cache.OrderLine">
    <id property="id" column="id"/>
    <result property="name" column="name"/>
    <result property="unitPrice" column="unit_price"/>
    <result property="quantity" column="quantity"/>
    <association property="order" select="selectOrder" column="{id=order_id}"/>
  </resultMap>
  <select id="selectOrderLines" resultMap="orderLineResultMap">
    select id, name, unit_price, quantity, order_id from ORDER_LINES where order_id = #{orderId} ORDER BY id
  </select>

</mapper>
