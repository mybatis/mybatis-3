<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.apache.ibatis.submitted.generic_type_detection.Mapper">

	<select id="getUser" resultMap="parentMap" parameterType="int">
		select id,name from users where id = #{id}
	</select>

	<resultMap id="parentMap"  type="Parent" >
		<result property="child.key.id" column="id" />
		<result property="user" column="name" />
	</resultMap>


	<insert id="insertUser" parameterType="Parent">
		insert into users values (#{child.key.id},#{user})
	</insert>
</mapper>